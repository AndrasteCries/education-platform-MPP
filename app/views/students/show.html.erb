<div class="container mt-4">
  <p style="color: green; font-size: 18px;"><%= notice %></p>

  <%= render @student %>
  <div class="mt-3">
    <%= link_to "Edit this student", edit_student_path(@student), class: "btn btn-primary" %> |
    <%= link_to "Back to students", students_path, class: "btn btn-secondary" %>

    <%= button_to "Destroy this student", @student, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger ml-2" %>
  </div>
</div>