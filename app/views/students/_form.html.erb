<%= form_with(model: student, local: true, class: "form-horizontal") do |form| %>
  <% if student.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>
      <ul>
        <% student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_area :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :middle_name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_area :middle_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :last_name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_area :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :group_id, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.number_field :group_id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :phone_number, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_area :phone_number, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_area :email, class: "form-control" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :currency %>
    <%= form.select :currency, options_for_select(['USD', 'EUR', 'UAH'], student.currency) %>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>


<% end %>
