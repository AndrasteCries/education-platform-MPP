<div class="container mt-3">
  <p class="text-success"><%= notice %></p>

  <%= render @subject %>

  <div>
    <h4>Related Subjects:</h4>
    <% @subject.lessons.each do |related_subject| %>
      <p>
        <%= link_to related_subject.title, related_subject %>
      </p>
    <% end %>
  </div>

  <div class="btn-group mt-2" role="group" aria-label="Group actions">
    <%= link_to "Add Group", add_group_subject_path(subject_id: @subject.id) %>
    <%= link_to "Create Lesson", new_lesson_path(subject_id: @subject.id), class: "btn btn-primary m-2 rounded" %>
    <%= link_to "Edit this subject", edit_subject_path(@subject), class: "btn btn-primary m-2 rounded" %> 
    <%= link_to "Back to subjects", subjects_path, class: "btn btn-secondary m-2 rounded" %> 
    <%= button_to "Destroy this subject", @subject, method: :delete, class: "btn btn-danger m-2 rounded" %>
  </div>
  
</div>
